/* Create a new table with a computed absolute severity variable */
proc sql;
    create table top50_outliers as
    select *, abs(severity) as abs_severity
    from dedup_outliers
    where outlier_flag = 1
    order by calculated abs_severity desc;
quit;

/* Print the top 50 outliers */
proc print data=top50_outliers (obs=50);
    title "Top 50 Outliers Sorted by Absolute Severity";
    var 'Basel Event Type Level 1'n gl_date freq severity abs_severity;
run;
