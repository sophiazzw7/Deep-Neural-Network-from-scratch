file_path = r"C:\Users\607267\PycharmProjects\pythonProject6\your_large_file.csv"
output_file = r"C:\Users\607267\PycharmProjects\pythonProject6\cleaned_file.csv"

with open(file_path, "rb") as f_in, open(output_file, "wb") as f_out:
    for line in f_in:
        f_out.write(line.decode("utf-8", errors="ignore").encode("utf-8"))

print("File cleaned! Try reading cleaned_file.csv now.")
df = pd.read_csv(output_file, encoding="utf-8")
