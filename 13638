import pandas as pd

# Load dataset
file_path = "your_large_file.csv"  # Replace with actual path
df = pd.read_csv(file_path)

# Define chunk size
chunk_size = 5000  

# Split and save files
for i in range(0, len(df), chunk_size):
    chunk = df.iloc[i:i + chunk_size]
    chunk.to_csv(f"small_part_{i // chunk_size + 1}.csv", index=False)

print("Splitting complete! Files saved as small_part_1.csv, small_part_2.csv, ...")
